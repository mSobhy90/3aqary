<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_alignParentRight="true"
	android:id="@+id/scrollView1" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical">
		<TextView android:id="@+id/helloUser" android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Hello, " android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_marginLeft="90dip"
			android:layout_width="wrap_content"></TextView>
		<TextView android:text="Here is your place's data: "
			android:layout_width="wrap_content" android:id="@+id/textView1"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
		<TextView android:text="Place ID: " android:id="@+id/placeID"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="User name: " android:id="@+id/placeUserName"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="City: " android:id="@+id/placeCity"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Suburb: " android:id="@+id/placeSuburb"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Street: " android:id="@+id/placeStreet"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="No. of Rooms: " android:id="@+id/placeRooms"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Floor No: " android:id="@+id/userNameCheckBox"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Area: " android:id="@+id/placeArea"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Price: " android:id="@+id/placePrice"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Status: " android:id="@+id/placeStatus"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Type: " android:id="@+id/placeType"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Coordinates: " android:id="@+id/placeCoord"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<TextView android:text="Description: " android:id="@+id/placeDesc"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginTop="10dip"></TextView>
		<Button android:layout_width="match_parent" android:text="Ok"
			android:clickable="true" android:onClick="onClick"
			android:layout_height="wrap_content" android:id="@+id/button1"
			android:layout_marginTop="10dip"></Button>
	</LinearLayout>
</ScrollView>
